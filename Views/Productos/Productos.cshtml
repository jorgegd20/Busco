@model List<Solicitud>

<h1>Lista de Solicitudes</h1>

<table class="table border">
    <tr>
        <th>Id</th>
        <th>Nombre Producto</th>
        <th>Foto Producto</th>
        <th>Descripción</th>
        <th>Precio</th>
        <th>Celular</th>
        <th>Lugar</th>
        <th>Comprador</th>
        <th>Categoria</th>
        <th>Solicitudes</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Producto.Nombre</td>
            <td><img src="@item.Producto.Foto"></td>
            <td>@item.Descripcion</td>
            <td>@item.Producto.Precio</td>
            <td>@item.Comprador.Celular</td>
            <td>@item.Lugar</td>
            <td>@item.Comprador.Nombre</td>
            <td>@item.Producto.Categoria</td>
        </tr>
    }
    @if (Model.Count == 0) {
        <tr>
            <td colspan="10" class="text-center">No se encontraron productos</td>
        </tr>
    }
</table>

<a href="/ubicaciones/nuevopueblo" class="btn btn-primary">Añadir Solicitud</a>